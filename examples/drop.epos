# Drop the nth element of a list
# Example:
#   (1..5).drop(0) #=> {2, 3, 4, 5}
fn drop*(lst: list(t), drop-index: int, index: int = 0): list(t)
  empty-list: list(t) = {}
  result := match index < len(lst) - 1 then
    false => empty-list
    true => match drop-index == index then
      true => lst.drop(drop-index, index + 1)
      false => {lst.elem(index), ..lst.drop(drop-index, index + 1)}
    end
  end
  result
end
