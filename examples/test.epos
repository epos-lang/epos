record Pair(a, b)
  first: a
  second: b
end

fn make-pair(first: a, second: b): Pair(a, b)
  @{
    first => first,
    second => second
  }
end

# Usage
name-age := make-pair("Alice", 30)
coords := make-pair(10, 20)

