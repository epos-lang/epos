# Test for static typing in Epos
fn add(a: int, b: int): int
  a + b
end
print(add(1, 2))
# Should print "3"

fn fact(n: int): int
  result: int = match n == 0 then
    true -> 1
    false -> n * fact(n - 1)
  end
  result
end
print(fact(5))
# Should print "120"

fn greet(name: string): string
