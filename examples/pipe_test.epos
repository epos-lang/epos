# Uniform function call syntax test

fn add(x: int, y: int): int
  x + y
end

fn double(x: int): int
  x * 2
end

fn triple(x: int): int
  x * 3
end

# Test basic uniform function call
result1 = 1.add(2).double()
print(result1)  # Should print 6: (1 + 2) * 2 = 6

# Test chained uniform function calls
result2 = 5.double().triple()
print(result2)  # Should print 30: (5 * 2) * 3 = 30

# Test traditional vs uniform function call style
traditional = double(add(1, 2))
uniform = 1.add(2).double()
print(traditional)  # Should print 6
print(uniform)      # Should print 6
